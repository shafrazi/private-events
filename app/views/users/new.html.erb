<h1>Sign up</h1>

<div class="signup-form">
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name :" %>
      <%= f.text_field :name, class: "form-control" %>  
    </div>
    <div class="form-group">
      <%= f.label :email, "Email :" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>