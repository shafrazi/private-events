<h1>Log in</h1>
<div class="login-form">
  <%= form_with(url: login_path, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email :" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <%= f.submit "Log in", class: "btn btn-primary"%>
  <% end %>
</div>